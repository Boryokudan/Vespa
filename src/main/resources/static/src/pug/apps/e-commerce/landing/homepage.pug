extends ../../../layouts/LayoutEcommerce
include ../../../mixins/e-commerce/homepage/Category
include ../../../mixins/e-commerce/homepage/TopDeals
include ../../../mixins/e-commerce/homepage/TopElectronics
include ../../../mixins/e-commerce/homepage/BestOffers
include ../../../mixins/e-commerce/homepage/Cta
include ../../../mixins/e-commerce/homepage/common
include ../../../mixins/common/Rating

append styles
  link(href=`${CWD}vendors/swiper/swiper-bundle.min.css`, rel='stylesheet')

append scripts
  script(src=`${CWD}vendors/swiper/swiper-bundle.min.js`)

block ecomContent
  .ecommerce-homepage.pt-5.mb-9
    +Section(null,'container-small').py-0
      +Categories
    +Section(null,'container').py-0
      .row.g-3.mb-9
        .col-12
          .whooping-banner.w-100.rounded-3.overflow-hidden.bg-soft-danger
            +Background({
              image: `${CWD}assets/img/e-commerce/whooping_banner_bag.png`,
              className: 'z-index--1 bag-bg',
            })
            +Background({
              image: `${CWD}assets/img/e-commerce/whooping_banner_shape.png`,
              className: 'z-index--1 shape-bg',
            })
            .banner-text.light
              h2.text-primary.fw-bolder.fs-lg-5.fs-xxl-7
                | Whooping 
                span.gradient-text 60% 
                | Off
              h3.fw-bolder.fs-lg-3.fs-xxl-5 on everyday items
            button.btn.btn-lg.btn-primary.rounded-pill.banner-button Shop Now
        .col-12.col-xl-6
          .gift-items-banner.w-100.rounded-3.overflow-hidden
            +Background({
              image: `${CWD}assets/img/e-commerce/gift-items-banner-bg.png`,
              className: 'z-index--1 banner-bg',
            })
            .banner-text.text-md-center.light
              h2.text-white.fw-bolder.fs-xl-4
                | Get 
                span.gradient-text 10% Off 
                br.d-md-none
                |  on gift items
              button.btn.btn-lg.btn-primary.rounded-pill.banner-button Buy Now
        .col-12.col-xl-6
          .best-in-market-banner.d-flex.h-100.px-4.px-sm-7.py-5.px-md-11.rounded-3.overflow-hidden
            +Background({
              image: `${CWD}assets/img/e-commerce/best-in-market-bg.png`,
              className: 'z-index--1 banner-bg',
            })
            .row.align-items-center.w-100
              .col-8
                .banner-text.light
                  h2.text-white.fw-bolder.fs-sm-4.mb-5
                    | MI 11 Pro
                    br
                    span.fs-1.fs-sm-2  Best in the market
                  button.btn.btn-lg.btn-warning.rounded-pill.banner-button Buy Now
              .col-4
                img.w-75(src=`${CWD}assets/img/e-commerce/5.png` alt="")
      +TopDeals
      +TopElectronics
      +BestOffers
      +Cta

    
      
